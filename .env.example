# AODA Compliance Checker Environment Configuration
# Copy this file to .env and update with your settings

# Application Settings
APP_NAME="AODA Compliance Checker"
APP_VERSION="1.0.0"

# Timezone Configuration
# Set your local timezone for accurate timestamps in reports and logs
# Common values:
#   - America/Toronto (Eastern Time)
#   - America/New_York (Eastern Time)
#   - America/Los_Angeles (Pacific Time)
#   - America/Chicago (Central Time)
#   - Europe/London (GMT/BST)
#   - UTC (Universal Time)
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=America/Toronto

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Crawler Settings
MAX_PAGES_DEFAULT=50
MAX_DEPTH_DEFAULT=3

# Performance Settings
REQUEST_DELAY=0.2  # Seconds between page requests (0.2 is optimized for speed, increase for slower servers)
TIMEOUT=20000  # Page load timeout in milliseconds (20 seconds)

# Screenshot Settings (major performance impact)
ENABLE_SCREENSHOTS=false  # Set to true to capture violation screenshots (makes scans 10x slower)
MAX_SCREENSHOTS_PER_PAGE=5  # Limit screenshots per page when enabled

# Database Configuration (MySQL 8.4)
#
# For Docker Compose deployment (recommended):
DATABASE_URL=mysql+aiomysql://aoda_user:aoda_password@mysql:3306/aoda_checker
#
# For local development (MySQL installed locally):
# DATABASE_URL=mysql+aiomysql://aoda_user:aoda_password@localhost:3306/aoda_checker
#
# Format: mysql+aiomysql://username:password@host:port/database

# Database Options
DATABASE_ECHO=false  # Set to true to log all SQL queries
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Report Settings
REPORTS_DIR=reports

