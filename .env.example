# AODA Checker Environment Variables
# Copy this file to .env and update the values

# Application Settings
APP_NAME="AODA Compliance Checker"
APP_VERSION="1.0.0"
HOST="0.0.0.0"
PORT=8080

# Timezone Configuration
TIMEZONE="America/Toronto"
TZ="America/Toronto"

# Database Configuration
DATABASE_URL="mysql+aiomysql://aoda_user:aoda_password@localhost:3306/aoda_checker"
DATABASE_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Authentication & Security
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY="change-this-secret-key-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=480

# Crawler Settings
MAX_PAGES_DEFAULT=50
MAX_DEPTH_DEFAULT=3
REQUEST_DELAY=0.2
TIMEOUT=20000

# Screenshot Settings (impacts performance)
ENABLE_SCREENSHOTS=false
MAX_SCREENSHOTS_PER_PAGE=5

# Reports Directory
REPORTS_DIR="reports"

