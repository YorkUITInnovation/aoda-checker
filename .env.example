# AODA Checker Environment Variables
# Copy this file to .env and update the values

# Application Settings
APP_NAME="AODA Compliance Checker"
APP_VERSION="1.0.0"
APP_URL="http://localhost:8080"
HOST="0.0.0.0"
PORT=8080

# Timezone Configuration
TIMEZONE="America/Toronto"
TZ="America/Toronto"

# Database Configuration
DATABASE_URL="mysql+aiomysql://aoda_user:aoda_password@localhost:3306/aoda_checker"
DATABASE_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Authentication & Security
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY="change-this-secret-key-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=480

# Crawler Settings
MAX_PAGES_DEFAULT=50
MAX_DEPTH_DEFAULT=3
REQUEST_DELAY=0.2
TIMEOUT=20000

# Screenshot Settings (impacts performance)
ENABLE_SCREENSHOTS=false
MAX_SCREENSHOTS_PER_PAGE=5

# Reports Directory
REPORTS_DIR="reports"

# Email Configuration (for Scheduled Scans)
# SMTP server settings for sending email notifications

# Development (MailHog) - Default configuration
# MailHog captures all emails for testing (view at http://localhost:8025)
SMTP_HOST="mailhog"
SMTP_PORT=1025
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=false
SMTP_FROM_EMAIL="noreply@aoda-checker.local"
SMTP_FROM_NAME="AODA Compliance Checker"

# Production Examples:
# Uncomment and configure for your email provider in production

# Gmail Example:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USERNAME="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_USE_TLS=true
# - Use App Password (not regular password)
# - Enable 2FA in Google Account
# - Generate App Password at: https://myaccount.google.com/apppasswords
#
# Other SMTP Providers:
# - Office 365: smtp.office365.com:587
# - Outlook: smtp-mail.outlook.com:587
# - Yahoo: smtp.mail.yahoo.com:587
# - Custom SMTP: your-smtp-server.com:587


